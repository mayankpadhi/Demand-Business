<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mayankpadhi.demandbusiness">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addProposal"
            android:label="@string/title_activity_add_proposal"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RecycleviewActivity"
            android:theme="@style/Actionbar"
            >
        </activity>

        <activity
            android:name=".DemandDetails"
            android:label="Demand Details"
            android:theme="@style/Actionbar" />

        <activity

            android:name=".ProposalActivity"
            android:theme="@style/Actionbar"

            />
        <activity
            android:name=".CompanyInfoActivity"
            android:theme="@style/Actionbar"
            />

        <activity
            android:name=".Login"
            />
        <activity
            android:name=".Signup"
            />

        <activity
            android:name=".ChangePassActivity"
            android:theme="@style/Actionbar"
            />

        <activity
            android:name=".MapsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />

    </application>

</manifest>